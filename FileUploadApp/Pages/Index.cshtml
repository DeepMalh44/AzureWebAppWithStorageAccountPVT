@page
@model IndexModel
@{
    ViewData["Title"] = "File Upload";
}

<div class="text-center">
    <h1 class="display-4">Upload File to Azure Blob Storage</h1>
    
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") mt-3">
            @Model.Message
        </div>
    }
    
    <form method="post" enctype="multipart/form-data" class="mt-4" id="uploadForm">
        <div class="mb-3">
            <input type="file" name="file" class="form-control" required id="fileInput" />
        </div>
        <button type="submit" class="btn btn-primary" id="uploadBtn">Upload</button>
        <div id="spinner" style="display:none;" class="mt-2">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Uploading...</span>
            </div>
            <p>Uploading file...</p>
        </div>
    </form>
</div>

<script>
document.getElementById('uploadForm').addEventListener('submit', function() {
    document.getElementById('uploadBtn').disabled = true;
    document.getElementById('spinner').style.display = 'block';
});
</script>
